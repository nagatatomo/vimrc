" ----------------------------------------------------------------
" 表示
" ----------------------------------------------------------------
" シンタックスハイライト
syntax on
" 行番号表示
set number
" ステータスライン表示
set laststatus=2 statusline=%F\ %y%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}\ %m%r%=%c,%l/%L(%p%%)

" ----------------------------------------------------------------
" ファイル形式
" ----------------------------------------------------------------
" ファイル形式の検出
filetype on
" ファイル形式に応じたインデント
filetype indent on
" ファイル形式に応じたプラグイン
filetype plugin on

" ----------------------------------------------------------------
" エンコード／改行コード
" ----------------------------------------------------------------
" ターミナルのエンコード
set termencoding=utf-8
" 内部エンコード
set encoding=utf-8
" ファイルエンコード
set fileencoding=utf-8
" エンコード自動判定
set fileencodings=utf-8,euc-jp,sjis,iso-2022-jp,cp932
" 改行コード自動判定
set fileformats=unix,dos,mac

" ----------------------------------------------------------------
" タブ／インデント
" ----------------------------------------------------------------
" オートインデント
set autoindent smartindent smarttab
" タブ幅
set tabstop=2 softtabstop=2 shiftwidth=2
" タブの代わりにスペース
set expandtab

" ----------------------------------------------------------------
" 検索
" ----------------------------------------------------------------
" 小文字で検索した場合は大文字小文字の区別なし
set ignorecase smartcase
" インクリメンタルサーチ
set incsearch
" 検索結果をハイライト
set hlsearch

" ----------------------------------------------------------------
" 操作系
" ----------------------------------------------------------------
" 対応する括弧を表示
set showmatch
"カーソルを行頭・行末で止めない
set whichwrap=b,s,h,l,<,>,[,]
" 全角スペースを視覚化
highlight ZenkakuSpace cterm=underline ctermfg=lightblue guibg=darkgray
match ZenkakuSpace /　/
" 保存時に行末スペースを削除
autocmd BufWritePre * :%s/\s\+$//ge

